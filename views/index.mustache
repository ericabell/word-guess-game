    <div class="container">
      <div class="row justify-content-between">
        <div class="col-6">
          {{#history.exists}}
          Wins: {{history.wins}} and Losses: {{history.losses}}
          {{/history.exists}}
        </div>
        <div class="col-6 flush-right">
          Welcome, {{userName}}!
        </div>
      </div>
      <div class="row justify-content-between">
        <div class="col-4 small">
          <a href="http://localhost:3000/reset">Reset Counters</a>
        </div>
        <div class="col-4 flush-right small">
          <a href="http://localhost:3000/auth/twitter">Authenticate with Twitter</a>
          <a href="http://localhost:3000/logout">Logout</a>
        </div>
      </div>


      <h1>Word Guessing Game</h1>

      {{#validationErrors}}
        <p class='error'>Sorry, your entry of "{{value}}" was {{msg}}.</p>
        <p>Please try again.</p>
      {{/validationErrors}}

      {{#stateInProgress}}
      <div class="row justify-content-around">
        <div class="col-4">
          Category: {{category}}
        </div>

        <div class="col-4">
          Guesses Remaining: {{guessesRemaining}}
        </div>
      </div>
        <div class="letter-blanks-container">
          {{#wordAsList}}
            {{#guessed}}
            <div class="letter-guessed">
              {{letter}}
            </div>
            {{/guessed}}

            {{^guessed}}
            <div class="letter-unguessed">
              {{letter}}
            </div>
            {{/guessed}}
          {{/wordAsList}}
        </div>

        <!-- <div class="letter-submit-form">
          <form class="" action="/" method="post">
            <label for="letter"></label><input type="text" name="letter" value="">
            <input type="submit" name="letter-guess" value="Guess">
          </form>
        </div> -->

        <div class="guessed-letters">
          Letters Guessed So Far:
          <p id="guessed-letter-list">
            {{#lettersGuessed}}
              {{.}}
            {{/lettersGuessed}}
          </p>
        </div>

        <div class="user-input-letter">

        </div>
      {{/stateInProgress}}

      {{#stateWon}}
          <h1>You Won!</h1>
          <p><a href='http://localhost:3000/highscores'>High Scores</a></p>
          <p><a href='http://localhost:3000/again'>Play Again?</a></p>
      {{/stateWon}}

      {{#stateLost}}
          <h1>You Lost!</h1>
          <p>The word was {{word}}</p>
          <p><a href='http://localhost:3000/highscores'>High Scores</a></p>
          <p><a href='http://localhost:3000/again'>Play Again?</a></p>
      {{/stateLost}}

    </div>
    <script src="js/script.js" charset="utf-8"></script>
